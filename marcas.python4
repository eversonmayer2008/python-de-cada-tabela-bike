class Marca:
    def __init__(self, id_marca: int, nome: str, descricao: str):
        self.id_marca = id_marca
        self.nome = nome
        self.descricao = descricao
    
    def __str__(self):
        return f"Marca {self.id_marca}: {self.nome} - {self.descricao[:50]}..."

# Exemplo de uso
if __name__ == "__main__":
    marca = Marca(
        id_marca=1,
        nome="Samsung",
        descricao="Marca coreana líder em eletrônicos e eletrodomésticos"
    )
    print(marca)
